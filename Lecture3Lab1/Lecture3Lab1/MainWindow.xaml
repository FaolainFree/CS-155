<Window x:Class="Lecture3Lab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lecture3Lab1"
        mc:Ignorable="d"
        Title="PigLatinConverter3000" Height="350" Width="525">
    <Grid>
        <Label x:Name="FirstNameLabel" Content="Enter your first name." HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,19,0,0"/>
        <Label x:Name="LastNameLabel" Content="Enter your last name." HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="2.575,3.21" Margin="20,93,0,0"/>
        <Button x:Name="ConverterButton" Content="Convert" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="218,193,0,0" Click="Button_Click"/>
        <TextBox x:Name="FirstNameTextBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="[first name goes here]" VerticalAlignment="Top" Width="243" Margin="20,45,0,0"/>
        <TextBox x:Name="LastNameTextBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="[last name goes here]" VerticalAlignment="Top" Width="243" Margin="20,124,0,0" TextChanged="TextBox_TextChanged"/>

    </Grid>
</Window>
